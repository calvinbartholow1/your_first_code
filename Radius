#include<iostream>
#include<cmath>
using namespace std;

class Circle
{
    private:
        double radius;

    public:
        Circle();
        void setRadius(double);
        double area();
};
//Circle::Circle- This is the constructor. It initializes the member class variable.
Circle::Circle()
{
    radius = 1.0;
}

void Circle::setRadius(double r)
{
    if (r>=0.0)
    {
        radius=r;
        //else leave it as 1.0
    }
}

double Circle::area()
{
    return 3.14 * pow(radius,2);
}

int main()
{
    Circle circle1;
    Circle circle2;
    circle2.setRadius(2.5);

    cout<<"The area of the first circle is "<<circle1.area()<<endl;
    cout<<"The area of the second circle is "<<circle2.area()<<endl;
    return 0;
}
